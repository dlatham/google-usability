<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @test.name %>
</p>

<p>
  <strong>Description:</strong>
  <%= @test.description %>
</p>

<p>
  <strong>Live:</strong>
  <%= @test.live %>
</p>

<p>
	<strong>Results:</strong>
	<% @test.results.each do |result| %>
	<%= result.title %><br>
	<%= result.description %><br>
	<%= result.linkShow %><br>
	<% end %>

<p>
	<strong>Add a Google result:</strong>
</p>
	<%= form_with(model: [ @test, @test.results.build ], local: true) do |form| %>
  <p>
    <%= form.label :title %><br>
    <%= form.text_field :title %>
  </p>
  <p>
    <%= form.label :description %><br>
    <%= form.text_area :description %>
  </p>
  <p>
    <%= form.label :linkShow %><br>
    <%= form.text_field :linkShow %>
  </p>
  <p>
    <%= form.label :link %><br>
    <%= form.text_field :link %>
  </p>
  <p>
    <%= form.label :ad %><br>
    <%= form.check_box :ad %>
  </p>
  <p>
    <%= form.submit %>
  </p>
<% end %>


<%= link_to 'Edit', edit_test_path(@test) %> |
<%= link_to 'Back', tests_path %>
